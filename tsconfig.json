  "compilerOptions": {
    "target": "es2017",
    "module": "es2022",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}